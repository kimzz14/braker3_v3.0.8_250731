###################################################################################
source activate braker3_v3.0.8_250731

cd /home/kimzz14/program/anaconda3/envs/braker3_v3.0.8_250731/share

git clone https://github.com/gatech-genemark/GeneMark-ETP.git
vi share/GeneMark-ETP/bin/gmes/ProtHint/bin/prothint.py
--binary-files=text

git clone https://github.com/Gaius-Augustus/TSEBRA

git clone https://github.com/Magdoll/cDNA_Cupcake.git
cd cDNA_Cupcake

vi setup.py
'sklearn'       ==>        'scikit-learn'

ext_modules = cythonize(ext_modules),       ==>        ext_modules = cythonize(ext_modules, language_level = "2"),

vi cupcake/tofu/branch/c_branch.pyx
ctypedef np.int_t DTYPE_t             ==> ctypedef np.int DTYPE_t

find . -name "*.py*" -exec sed -i 's/\bnp\.int\b/np.int64/g' {} +


vi ../etc/conda/activate.d/export_path.sh
export GENEMARK_PATH=/home/kimzz14/program/anaconda3/envs/braker3_v3.0.8_250731/share/GeneMark-ETP/bin
export PROTHINT_PATH=/home/kimzz14/program/anaconda3/envs/braker3_v3.0.8_250731/share/GeneMark-ETP/bin/gmes/ProtHint/bin
export   TSEBRA_PATH=/home/kimzz14/program/anaconda3/envs/braker3_v3.0.8_250731/share/TSEBRA/bin

vi ../etc/conda/deactivate.d/export_path.sh
unset GENEMARK_PATH
unset PROTHINT_PATH
unset   TSEBRA_PATH

###################################################################################
cpan install Math::Utils
cpan install Statistics::LineFit
cpan install YAML
cpan install YAML::XS
cpan install Hash::Merge
cpan install Parallel::ForkManager
cpan install MCE::Mutex

curl -L "https://rest.uniprot.org/uniprotkb/stream?compressed=true&format=fasta&query=%28%28taxonomy_id%3A3701%29%29" -o uniprot_3701.fasta.gz
wget https://ftp.ncbi.nlm.nih.gov/genomes/all/GCF/000/004/255/GCF_000004255.2_v.1.0/GCF_000004255.2_v.1.0_protein.faa.gz
wget https://ftp.ncbi.nlm.nih.gov/genomes/all/GCA/019/202/795/GCA_019202795.1_ASM1920279v1/GCA_019202795.1_ASM1920279v1_protein.faa.gz
wget https://ftp.ncbi.nlm.nih.gov/genomes/all/GCF/000/633/955/GCF_000633955.1_Cs/GCF_000633955.1_Cs_protein.faa.gz
wget https://ftp.ncbi.nlm.nih.gov/genomes/all/GCA/019/202/805/GCA_019202805.1_ASM1920280v1/GCA_019202805.1_ASM1920280v1_protein.faa.gz
wget https://ftp.ncbi.nlm.nih.gov/genomes/all/GCF/000/375/325/GCF_000375325.1_Caprub1_0/GCF_000375325.1_Caprub1_0_protein.faa.gz